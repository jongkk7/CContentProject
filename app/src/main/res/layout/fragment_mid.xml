<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <ImageView
        android:id="@+id/cat_imageview"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/catSize"
        android:layout_height="@dimen/catSize" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item01"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/cat_imageview"
        android:layout_width="@dimen/itemSize1"
        android:layout_height="@dimen/itemSize1"
        app:lottie_loop="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item02"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="-30dp"
        android:layout_above="@+id/cat_imageview"
        android:layout_width="@dimen/itemSize2"
        android:layout_height="@dimen/itemSize2"
        app:lottie_loop="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item03"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/cat_imageview"
        android:layout_width="@dimen/itemSize3"
        android:layout_height="@dimen/itemSize3"
        app:lottie_loop="true"/>

</RelativeLayout>
