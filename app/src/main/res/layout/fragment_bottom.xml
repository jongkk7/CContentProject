<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#0B000000"
    android:orientation="vertical">

    <!-- 꿀팁 -->
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iconMidSize"
            android:layout_height="@dimen/iconMidSize"
            android:background="@drawable/icon_tip"/>

        <TextView
            android:text="꿀팁"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/BottomTitleTextView"/>

        <TextView
            android:text="수정 화장품 챙겨가기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BottomContentTextView"/>
    </LinearLayout>

    <!-- 미세먼지지수 -->
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iconMidSize"
            android:layout_height="@dimen/iconMidSize"
            android:background="@drawable/icon_dusk"/>

        <TextView
            android:text="미세먼지지수"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/BottomTitleTextView"/>

        <TextView
            android:text="마스크 착용!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BottomContentTextView"/>
    </LinearLayout>

    <!-- 자외선 -->
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iconMidSize"
            android:layout_height="@dimen/iconMidSize"
            android:background="@drawable/icon_uv"/>

        <TextView
            android:text="자외선"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/BottomTitleTextView"/>

        <TextView
            android:text="선크림 위험!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BottomContentTextView"/>
    </LinearLayout>

    <!-- 습도 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iconMidSize"
            android:layout_height="@dimen/iconMidSize"
            android:background="@drawable/icon_humidity"/>

        <TextView
            android:text="습도"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/BottomTitleTextView"/>

        <TextView
            android:text="보습제 필수"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BottomContentTextView"/>
    </LinearLayout>

</LinearLayout>
