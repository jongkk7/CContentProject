<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:background="#00000000">

    <TextView
        android:id="@+id/temperature_textview"
        android:text="26"
        android:textSize="@dimen/crazyTextSize"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="o"
        android:textSize="@dimen/midTextSize"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/temperature_textview"
        android:layout_alignTop="@+id/temperature_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/weather_textview"
        android:text="sunny"
        android:textSize="@dimen/midTextSize"
        android:textColor="@color/white"
        android:layout_below="@+id/temperature_textview"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/sky_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_sun"/>

</RelativeLayout>
